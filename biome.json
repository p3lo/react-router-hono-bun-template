{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": ["**", "!**/app/library/icon/**/*", "!**/app/tailwind.css"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"recommended": true,
				"noConsole": "off",
				"noDocumentCookie": "off",
				"noMisleadingCharacterClass": "off",
				"noArrayIndexKey": "off"
			},
			"style": {
				"recommended": true,
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"recommended": true,
				"useLiteralKeys": "off"
			},
			"security": {
				"recommended": true
			},
			"performance": {
				"recommended": true
			},
			"correctness": {
				"recommended": true,
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedLabels": "error",
				"noUnusedFunctionParameters": "error",
				"noNestedComponentDefinitions": "off",
				"useUniqueElementIds": "off"
			},
			"a11y": {
				"recommended": false
			},
			"nursery": {
				"recommended": true,
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {
						"functions": ["cn", "cva", "tw", "clsx", "twMerge"]
					}
				}
			}
		}
	},
	"css": {
		"parser": {
			"allowWrongLineComments": true
		},
		"linter": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "es5"
		}
	}
}
