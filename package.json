{
	"name": "@p3lo/react-router-hono-bun-template",
	"version": "0.0.1",
	"author": "p3lo",
	"description": "Modern React Router v7 template with Hono server and Bun runtime. Based on Forge 42 base-stack with significant optimizations.",
	"private": true,
	"sideEffects": false,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"execute": "bun",
		"clean": "git clean -fdX --exclude=\"!.env\"",
		"script": "bun scripts/setup.ts",
		"cleanup": "bun run script scripts/cleanup.ts",
		"build": "react-router build",
		"dev": "react-router dev",
		"start": "NODE_ENV=production bun ./build/server/index.js",
		"typecheck": "tsc",
		"validate": "bun run check && bun run typecheck && bun run check:unused",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"check:unused": "knip --max-issues 1",
		"check:unused:fix": "knip --fix",
		"typegen": "react-router typegen",
		"postinstall": "bun run typegen"
	},
	"dependencies": {
		"@epic-web/client-hints": "1.3.8",
		"@forge42/seo-tools": "1.4.5",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-slot": "^1.2.3",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"hono": "4.10.4",
		"i18next": "25.6.0",
		"i18next-browser-languagedetector": "8.2.0",
		"i18next-http-backend": "3.0.2",
		"isbot": "5.1.32",
		"lucide-react": "0.552.0",
		"pretty-cache-header": "1.0.0",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"react-i18next": "16.2.4",
		"react-router": "7.9.5",
		"react-router-hono-server": "2.22.0",
		"remix-hono": "0.0.18",
		"remix-i18next": "7.4.2",
		"tailwind-merge": "3.3.1",
		"tailwindcss-animate": "1.0.7",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@babel/preset-typescript": "7.28.5",
		"@biomejs/biome": "2.3.3",
		"@dotenvx/dotenvx": "1.51.0",
		"@react-router/dev": "7.9.5",
		"@react-router/fs-routes": "7.9.5",
		"@tailwindcss/vite": "4.1.16",
		"@types/prompt": "1.1.9",
		"@types/react": "19.2.2",
		"@types/react-dom": "19.2.2",
		"babel-plugin-react-compiler": "1.0.0",
		"chalk": "5.6.2",
		"knip": "5.67.1",
		"lefthook": "2.0.2",
		"prompt": "1.3.0",
		"react-router-devtools": "5.1.3",
		"tailwindcss": "4.1.16",
		"tw-animate-css": "1.4.0",
		"typescript": "5.9.3",
		"vite": "7.1.12",
		"vite-plugin-babel": "1.3.2",
		"vite-plugin-icons-spritesheet": "3.0.1",
		"vite-tsconfig-paths": "5.1.4"
	},
	"packageManager": "bun@1.3.1",
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.52.5"
	},
	"engines": {
		"bun": ">=1.3.0"
	}
}
